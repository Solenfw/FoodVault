@page
@model LoginModel

@{
    // This is required to make the page self-contained and not use a master layout.
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Log in - Your Application</title>

    <!-- Link to Bootstrap for basic styling and layout -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        /* === Page Layout === */
        body {
            background-color: #f8f9fa; /* Light grey background */
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
            min-height: 100vh;
        }

        .login-container {
            max-width: 900px;
            width: 100%;
            background-color: #ffffff;
            border-radius: 0.5rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            overflow: hidden; /* Ensures the two-column look stays clean */
        }

        .form-section {
            padding: 2.5rem;
        }

        .divider-column {
            border-left: 1px solid #dee2e6;
        }

        /* On smaller screens, remove the divider and add space */
        @@media (max-width: 767px) {
            .divider-column {
                border-left: none;
                border-top: 1px solid #dee2e6;
                padding-top: 2.5rem !important;
            }
        }

        .form-links {
            text-align: center;
            margin-top: 1.5rem;
        }

            .form-links p {
                margin-bottom: 0.5rem;
            }

            .form-links a {
                font-size: 0.9rem;
                text-decoration: none;
            }

                .form-links a:hover {
                    text-decoration: underline;
                }

        /* === Password Visibility Toggle === */
        .password-input-wrapper {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d;
        }

        /* === Button Loading Spinner === */
        .btn-loading {
            position: relative;
            color: transparent !important;
            pointer-events: none;
        }

            .btn-loading::after {
                content: "";
                position: absolute;
                width: 1.2rem;
                height: 1.2rem;
                top: 50%;
                left: 50%;
                margin: -0.6rem 0 0 -0.6rem;
                border: 3px solid rgba(255, 255, 255, 0.5);
                border-radius: 50%;
                border-top-color: #ffffff;
                animation: spinner 0.6s linear infinite;
            }

        .btn-outline-dark.btn-loading::after {
            border-top-color: #212529;
            border-color: rgba(33, 37, 41, 0.5);
        }

        @@keyframes spinner {
            to {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="row g-0">
            <!-- Left Column: Local Login Form -->
            <div class="col-md-6 form-section">
                <h2 class="text-center">Welcome Back!</h2>
                <hr class="my-4" />
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password with Toggle -->
                        <div class="form-floating mb-3 password-input-wrapper">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="small">Forgot password?</a>
                        </div>

                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>

                        <div class="form-links">
                            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                            <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                        </div>
                    </form>
                </section>
            </div>

            <!-- Right Column: External Logins -->
            <div class="col-md-6 form-section divider-column">
                <section>
                    <h3 class="text-center">Use another service</h3>
                    <hr class="my-4" />
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div class="alert alert-info">There are no external authentication services configured.</div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="d-grid gap-3">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-outline-dark btn-lg d-flex align-items-center justify-content-center gap-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                            @if (provider.Name.ToLower() == "google")
                                            {
                                                <svg width="18" height="18" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
                                                    <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
                                                    <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
                                                    <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
                                                    <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
                                                    <path fill="none" d="M0 0h48v48H0z"></path>
                                                </svg>
                                            }
                                            <span>Continue with @provider.DisplayName</span>
                                        </button>
                                    }
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>
    </div>

    <!-- Required Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}