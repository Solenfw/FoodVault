@model FoodVault.Areas.Admin.ViewModels.TagDetailsViewModel
@{
    ViewData["Title"] = "Chi tiết Tag: " + Model.Name;
    Layout = "_AdminLayout";
}

<div class="content-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Chi tiết Tag</h1>
            <p class="text-muted">@Model.Name</p>
        </div>
        <div>
            <a href="/admin/tags" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Quay lại
            </a>
            <a href="/admin/tags/edit/@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-2"></i>Sửa
            </a>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title m-0">Thông tin cơ bản</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9"><small class="text-muted">@Model.Id</small></dd>

                    <dt class="col-sm-3">Tên:</dt>
                    <dd class="col-sm-9"><strong>@Model.Name</strong></dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title m-0">Thống kê sử dụng</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Được dùng trong Recipes:</span>
                        <span class="badge bg-info">@Model.RecipeCount</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title m-0">Hành động</h5>
            </div>
            <div class="card-body">
                <form method="post" action="/admin/tags/delete/@Model.Id" onsubmit="return confirm('Bạn có chắc chắn muốn xóa tag này? Hành động này không thể hoàn tác.');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-trash me-2"></i>Xóa Tag
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

