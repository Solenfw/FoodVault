@model List<FoodVault.Areas.Admin.ViewModels.RecipeApprovalListViewModel>
@using System.Linq
@{
    ViewData["Title"] = "Recipes Nổi Bật";
    Layout = "_AdminLayout";
}

<div class="content-header mb-4">
    <h1>Recipes Nổi Bật</h1>
    <p class="text-muted">Danh sách công thức nổi bật (có rating cao hoặc nhiều lượt yêu thích)</p>
</div>

<div class="alert alert-info">
    <i class="bi bi-info-circle me-2"></i>
    <strong>Lưu ý:</strong> Hiện tại hệ thống hiển thị các công thức có rating >= 4.0 (với ít nhất 5 đánh giá) hoặc có >= 10 lượt yêu thích.
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo tiêu đề..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-2"></i>Tìm kiếm
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title m-0">Tổng cộng: @ViewBag.TotalRecipes công thức nổi bật</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Tiêu đề</th>
                            <th>Tác giả</th>
                            <th>Favorites</th>
                            <th>Rating</th>
                            <th>Ngày tạo</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var recipe in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                                    {
                                        <img src="@recipe.ImageUrl" alt="@recipe.Title" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <strong>@recipe.Title</strong>
                                    @if (!string.IsNullOrEmpty(recipe.Description))
                                    {
                                        <br /><small class="text-muted">@(recipe.Description.Length > 50 ? recipe.Description.Substring(0, 50) + "..." : recipe.Description)</small>
                                    }
                                </td>
                                <td>@recipe.AuthorName</td>
                                <td>
                                    <span class="badge bg-warning">
                                        <i class="bi bi-heart-fill me-1"></i>@recipe.FavoriteCount
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-success">
                                        <i class="bi bi-star-fill me-1"></i>@recipe.AvgRating.ToString("F1")
                                    </span>
                                </td>
                                <td>@(recipe.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-area="Admin" asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-outline-primary" title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/recipe/details/@recipe.Id" class="btn btn-outline-info" title="Xem trên site" target="_blank">
                                            <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                <a class="page-link" href="/admin/recipes/featured?page=@i&search=@ViewBag.Search">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-star" style="font-size: 3rem;"></i>
                <p class="mt-3">Không có công thức nổi bật nào</p>
            </div>
        }
    </div>
</div>

