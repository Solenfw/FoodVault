@model List<FoodVault.Areas.Admin.ViewModels.UserListViewModel>
@{
    ViewData["Title"] = "Quản lý Users";
    Layout = "_AdminLayout";
}

<div class="content-header mb-4">
    <h1>Quản lý Users</h1>
    <p class="text-muted">Danh sách tất cả người dùng trong hệ thống</p>
</div>

<!-- Search and Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo tên hoặc email..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-2"></i>Tìm kiếm
                </button>
            </div>
            <div class="col-md-3">
                <a href="/admin/users" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-arrow-clockwise me-2"></i>Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title m-0">Tổng cộng: @ViewBag.TotalUsers users</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên đăng nhập</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Trạng thái</th>
                            <th>Recipes</th>
                            <th>Favorites</th>
                            <th>Ngày tạo</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td><small class="text-muted">@user.Id.Substring(0, Math.Min(8, user.Id.Length))...</small></td>
                                <td>@user.UserName</td>
                                <td>
                                    @user.Email
                                    @if (user.EmailConfirmed)
                                    {
                                        <i class="bi bi-check-circle-fill text-success ms-1" title="Đã xác nhận email"></i>
                                    }
                                </td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-primary me-1">@role</span>
                                    }
                                </td>
                                <td>
                                    @if (user.LockoutEnabled && user.LockoutEnd > DateTimeOffset.UtcNow)
                                    {
                                        <span class="badge bg-danger">Đã khóa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                </td>
                                <td><span class="badge bg-info">@user.RecipeCount</span></td>
                                <td><span class="badge bg-warning">@user.FavoriteCount</span></td>
                                <td>@(user.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/admin/users/details/@user.Id" class="btn btn-outline-primary" title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/admin/users/edit/@user.Id" class="btn btn-outline-secondary" title="Sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="/admin/users/delete/@user.Id" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa user này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                <a class="page-link" href="/admin/users?page=@i&search=@ViewBag.Search">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                <p class="mt-3">Không tìm thấy user nào</p>
            </div>
        }
    </div>
</div>

