@model List<FoodVault.Areas.Admin.ViewModels.IngredientListViewModel>
@{
    ViewData["Title"] = "Quản lý Ingredients";
    Layout = "_AdminLayout";
}

<div class="content-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Quản lý Ingredients</h1>
            <p class="text-muted">Danh sách tất cả nguyên liệu trong hệ thống</p>
        </div>
        <div>
            <a href="/admin/ingredients/create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Tạo mới
            </a>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo tên..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-2"></i>Tìm kiếm
                </button>
            </div>
            <div class="col-md-3">
                <a href="/admin/ingredients" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-arrow-clockwise me-2"></i>Reset
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title m-0">Tổng cộng: @ViewBag.TotalIngredients ingredients</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Tên</th>
                            <th>Đơn vị</th>
                            <th>Calories</th>
                            <th>Protein</th>
                            <th>Fat</th>
                            <th>Carbs</th>
                            <th>Sử dụng</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ingredient in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(ingredient.ImageUrl))
                                    {
                                        <img src="@ingredient.ImageUrl" alt="@ingredient.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td><strong>@ingredient.Name</strong></td>
                                <td>@(ingredient.DefaultUnit ?? "N/A")</td>
                                <td>@(ingredient.DefaultCalories?.ToString("F1") ?? "N/A")</td>
                                <td>@(ingredient.DefaultProtein?.ToString("F1") ?? "N/A")</td>
                                <td>@(ingredient.DefaultFat?.ToString("F1") ?? "N/A")</td>
                                <td>@(ingredient.DefaultCarbs?.ToString("F1") ?? "N/A")</td>
                                <td>
                                    <span class="badge bg-info me-1">@ingredient.RecipeCount recipes</span>
                                    <span class="badge bg-warning">@ingredient.FridgeCount fridges</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/admin/ingredients/details/@ingredient.Id" class="btn btn-outline-primary" title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/admin/ingredients/edit/@ingredient.Id" class="btn btn-outline-secondary" title="Sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="/admin/ingredients/delete/@ingredient.Id" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa nguyên liệu này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                <a class="page-link" href="/admin/ingredients?page=@i&search=@ViewBag.Search">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                <p class="mt-3">Không tìm thấy nguyên liệu nào</p>
            </div>
        }
    </div>
</div>

