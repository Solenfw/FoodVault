@model FoodVault.Models.ViewModels.RecipeCardViewModel
<div class="col">
	<div class="card h-100 shadow-sm">
		@if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
		{
			<img src="@Model.ImageUrl" class="card-img-top object-fit-cover" alt="@Model.Title" style="aspect-ratio: 16/9;" />
		}
		<div class="card-body d-flex flex-column">
			<h5 class="card-title text-truncate" title="@Model.Title">@Model.Title</h5>
			<p class="card-text text-muted small mb-2 text-truncate" title="@Model.Description">@Model.Description</p>
			<div class="mb-2">
				<partial name="_StarRating" model="new FoodVault.Models.ViewModels.StarRatingViewModel { Rating = Model.Rating }" />
			</div>
			<div class="mt-auto d-flex align-items-center justify-content-between">
				<div class="d-flex align-items-center gap-2 small text-muted">
					@if (Model.PrepTimeMinutes != null)
					{
						<span class="badge text-bg-light">Prep: @Model.PrepTimeMinutes m</span>
					}
					@if (Model.CookTimeMinutes != null)
					{
						<span class="badge text-bg-light">Cook: @Model.CookTimeMinutes m</span>
					}
					@if (Model.Servings != null)
					{
						<span class="badge text-bg-light">@Model.Servings servings</span>
					}
				</div>
				<partial name="_FavoriteButton" model="new FoodVault.Models.ViewModels.FavoriteButtonViewModel { RecipeId = Model.Id, IsFavorited = Model.IsFavorited }" />
			</div>
		</div>
		<div class="card-footer bg-white border-0 pt-0">
			<a class="btn btn-primary w-100" asp-controller="Recipes" asp-action="Details" asp-route-id="@Model.Id">View</a>
		</div>
	</div>
</div>
