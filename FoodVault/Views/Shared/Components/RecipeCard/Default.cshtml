@model FoodVault.Models.ViewModels.RecipeCardViewModel

<div class="card h-100 shadow-sm">
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="card-img-top object-fit-cover" alt="@Model.Title" style="aspect-ratio: 16/9;" />
    }
    else
    {
        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="aspect-ratio: 16/9;">
            <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
        </div>
    }
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text text-muted small flex-grow-1">@Model.Description</p>
        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary mt-auto">View</a>
    </div>
</div>














