@model FoodVault.Models.ViewModels.RecipeCardViewModel

<div class="card h-100">
    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/favicon.ico" : Model.ImageUrl)" class="card-img-top" alt="@Model.Title" />
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>
        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">View</a>
    </div>
</div>











