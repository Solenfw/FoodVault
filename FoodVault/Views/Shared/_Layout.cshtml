						<partial name="_LoginPartial" />
					</div>
				</div>
			</div>
		</nav>
	</header>

	<main role="main" class="container py-3">
		@RenderBody()
	</main>

    @* Thay thế footer cũ bằng partial Footer *@
    <partial name="Footer" />

	<!-- Toasts container -->
	<div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 1080;">
		<div id="toastRegion" class="toast-container"></div>
	</div>
	<partial name="_Toast" />

	<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<script src="~/js/site.js"></script>
	<script src="~/js/toast.js"></script>
	<script>
			(function() {
			var COOKIE = 'fv_theme';
				var LS = 'fv_theme';
			function getCookie(name){
				var m = document.cookie.match(new RegExp('(?:^|; )' + name.replace(/([.$?*|{}()\[\]\\\/\+^])/g, '\\$1') + '=([^;]*)'));
				return m ? decodeURIComponent(m[1]) : null;
			}
			function setCookie(name, value){
				document.cookie = name + '=' + encodeURIComponent(value) + '; path=/; max-age=' + (60*60*24*30);
			}
				function isValid(t){ return t==='light'||t==='dark'||t==='auto'; }
			function applyTheme(t){
				if(t==='auto'){
					var prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
					document.documentElement.setAttribute('data-bs-theme', prefersDark ? 'dark' : 'light');
					updateIcon(prefersDark ? 'dark' : 'light');
				} else {
					document.documentElement.setAttribute('data-bs-theme', t);
					updateIcon(t);
				}
			}
			function current(){
					var t = localStorage.getItem(LS) || getCookie(COOKIE) || document.documentElement.getAttribute('data-bs-theme') || 'auto';
				return isValid(t) ? t : 'auto';
			}
			function next(t){ return t==='auto' ? 'light' : (t==='light' ? 'dark' : 'auto'); }
			function updateIcon(t){
				var el = document.getElementById('themeIcon');
				if(!el) return;
				if(t==='light') el.innerHTML = '\u2600\ufe0f'; // sun
				else if(t==='dark') el.innerHTML = '\ud83c\udf19'; // moon
				else el.innerHTML = '\u263c'; // auto
			}
				document.addEventListener('DOMContentLoaded', function(){
				var t = current();
				applyTheme(t);
					if (t==='auto' && window.matchMedia) {
						var mq = window.matchMedia('(prefers-color-scheme: dark)');
						mq.addEventListener ? mq.addEventListener('change', function(){ applyTheme('auto'); }) : mq.addListener(function(){ applyTheme('auto'); });
					}
				var btn = document.getElementById('themeToggle');
				if(btn){
					btn.addEventListener('click', function(){
							var t = next(current());
							setCookie(COOKIE, t);
							try { localStorage.setItem(LS, t); } catch(e) {}
							applyTheme(t);
							// try persist to server (if signed in)
							fetch('/theme/set?theme=' + encodeURIComponent(t), { method: 'POST', credentials: 'same-origin' }).catch(function(){});
					});
				}
			});
		})();
	</script>
	@RenderSection("Scripts", required: false)
</body>
<script>
  (function() {
    try {
      var meta = document.querySelector('meta[name="user-theme"]');
      var t = meta ? meta.getAttribute('content') : null;
      if (t === 'light' || t === 'dark' || t === 'auto') {
        document.documentElement.setAttribute('data-bs-theme', t);
      }
    } catch (e) { }
  })();
</script>
</html>
