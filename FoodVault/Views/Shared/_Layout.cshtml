@{
    var title = ViewData["Title"] as string ?? "FoodVault";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>@title - FoodVault</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
			<div class="container">
				<a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">FoodVault</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="mainNavbar">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
						<li class="nav-item"><a class="nav-link" asp-controller="Recipe" asp-action="Index">Recipes</a></li>
						<li class="nav-item">
							<a class="nav-link d-flex align-items-center position-relative" asp-controller="Favorite" asp-action="Index">
								<span class="position-relative" style="display:inline-block;width:24px;height:24px;">
									<span class="position-relative heart-gradient" style="display:inline-block;width:24px;height:24px;">
  <svg width="24" height="24" viewBox="0 0 24 24">
    <defs>
      <linearGradient id="heart-gradient" x1="0" x2="1" y1="0" y2="1">
        <stop offset="0%" stop-color="#ff8a00" />
        <stop offset="100%" stop-color="#ff3576" />
      </linearGradient>
    </defs>
    <path d="M12 21.35l-1.45-1.32C5.1 15.28 2 12.36 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41 1.08 4.13 2.69C12.09 4.09 13.76 3 15.5 3 18.58 3 21 5.42 21 8.5c0 3.86-3.1 6.78-8.55 11.54z"
          fill="url(#heart-gradient)" stroke="#ff8a00" stroke-width="1"/>
  </svg>
  @await Component.InvokeAsync("FavoriteCount")
</span>
									@await Component.InvokeAsync("FavoriteCount")
								</span>
								<span class="ms-1">My Favorites</span>
							</a>
						</li>
						<li class="nav-item"><a class="nav-link" asp-controller="Fridge" asp-action="Index">Fridge</a></li>
						<li class="nav-item"><a class="nav-link" asp-controller="Profile" asp-action="Index">Profile</a></li>
					</ul>
					<form class="d-flex me-2" method="get" asp-controller="Search" asp-action="Results">
					    <input class="form-control me-2" type="search" name="query" placeholder="Tìm công thức hoặc nguyên liệu..." aria-label="Search">
					    <button class="btn btn-outline-success" type="submit">Tìm</button>
					</form>
					<div class="d-flex">
						<partial name="_LoginPartial" />
					</div>
				</div>
			</div>
		</nav>
	</header>

	<main role="main" class="container py-3">
		@RenderBody()
	</main>

    @* Thay thế footer cũ bằng partial Footer *@
    <partial name="Footer" />

	<!-- Toasts container -->
	<div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 1080;">
		<div id="toastRegion" class="toast-container"></div>
	</div>
	<partial name="_Toast" />

	<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<script src="~/js/site.js"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>
