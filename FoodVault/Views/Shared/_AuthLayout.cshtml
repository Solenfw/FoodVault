@{
    var title = ViewData["Title"] as string ?? "Auth";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - FoodVault</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6">
                <div class="text-center mb-4">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <h2 class="m-0">FoodVault</h2>
                    </a>
                    <div class="text-muted">@title</div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <partial name="~/Views/Shared/_Messages.cshtml" />
                        @RenderBody()
                    </div>
                </div>

                <div class="text-center mt-4 small text-muted">
                    <a asp-controller="Pages" asp-action="Privacy" class="text-decoration-none">Privacy</a>
                    ·
                    <a asp-controller="Pages" asp-action="Terms" class="text-decoration-none">Terms</a>
                    ·
                    <a asp-controller="Pages" asp-action="Contact" class="text-decoration-none">Contact</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


