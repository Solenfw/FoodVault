@{
	var success = TempData["Success"] as string;
	var error = TempData["Error"] as string;
	var info = TempData["Info"] as string;
}
@if (!string.IsNullOrWhiteSpace(success))
{
	<div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="3500">
		<div class="d-flex">
			<div class="toast-body">@success</div>
			<button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
		</div>
	</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
	<div class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
		<div class="d-flex">
			<div class="toast-body">@error</div>
			<button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
		</div>
	</div>
}
@if (!string.IsNullOrWhiteSpace(info))
{
	<div class="toast align-items-center text-bg-primary border-0" role="alert" aria-live="polite" aria-atomic="true" data-bs-autohide="true" data-bs-delay="4000">
		<div class="d-flex">
			<div class="toast-body">@info</div>
			<button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
		</div>
	</div>
}



