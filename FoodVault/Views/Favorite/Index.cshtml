@model IEnumerable<FoodVault.Models.ViewModels.FavoriteListItemViewModel>
@{
    ViewData["Title"] = "My Favorites";
}

<partial name="~/Views/Shared/_Messages.cshtml" />

<div class="list-group">
@foreach (var item in Model)
{
    <div class="list-group-item d-flex justify-content-between align-items-center">
        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@item.RecipeId">@item.Title</a>
        <form asp-action="Remove" method="post" class="m-0">
            <input type="hidden" name="recipeId" value="@item.RecipeId" />
            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
        </form>
    </div>
}
</div>











